@using TravelWebApp.Models.Classes
@model List<Comment>

@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Username</td>
            <td>@x.Mail</td>
            <td>@x.Comments</td>
            <td>@x.Blog.Header</td>
            <td><a href="/Admin/DeleteComment/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/GetComment/@x.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>

