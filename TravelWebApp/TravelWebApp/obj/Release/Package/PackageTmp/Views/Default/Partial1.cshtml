@using TravelWebApp.Models.Classes
@model List<Blog>

<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left" style="margin-bottom:20px">
            <div class="bot-left">
                <img src="@x.BlogImageURL" alt="" style="width:275px; height:175px"/>
            </div>
            <div class="left-text">
                <h4>@x.Header</h4>
                <span class="doller">@x.Date.ToString("dd.MM.yyyy")</span>
                <p>@x.Explanation.Substring(0, 75)...</p>
                <p><a href="/Blog/BlogDetails/@x.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2", "Default")
</div>