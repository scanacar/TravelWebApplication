@model TravelWebApp.Models.Classes.Blog

@{
    ViewBag.Title = "GetBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("EditBlog", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly"})
    <br />
    @Html.LabelFor(x => x.Header)
    @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Date)
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogImageURL)
    @Html.TextBoxFor(x => x.BlogImageURL, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Explanation)
    @Html.TextAreaFor(x => x.Explanation,15,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
}

